[user]
	email = 
	name = Bruno Cabral
[cola]
	theme = flat-dark-grey
	icontheme = dark
	startupmode = folder
[init]
	defaultBranch = master
[gui]
	editor = nano
# [gui]
# 	editor = code
# 	historybrowser = git-cola dag
[alias]
	c1 = clone --depth 1 --recursive --shallow-submodules
	lol = log --oneline
	graph = log --oneline --graph --decorate
	diffw = diff --word-diff
	actions = reflog --date=iso
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
[http]
	cookiefile = ~/.gitcookies
[grep]
	lineNumber = true
	patternType = perl
[diff]
	tool = meld
	guitool = meld
[difftool]
	prompt = false
# [difftool "meld"]
# 	path = \"C:/Program Files (x86)/Meld/Meld.exe\"
[merge]
	conflictstyle = diff3
	tool = meld
[mergetool]
	prompt = false
[mergetool.meld]
	cmd = meld --auto-merge $LOCAL $BASE $REMOTE --output=$MERGED --diff $BASE $LOCAL --diff $BASE $REMOTE
# [mergetool "meld"]
# 	path = \"C:/Program Files (x86)/Meld/Meld.exe\"
# 	cmd = \"C:\\Program Files (x86)\\Meld\\Meld.exe\" --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output \"$MERGED\"
[rerere]
	enabled = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[cola]
	blameviewer = git gui blame
	theme = flat-dark-red
	icontheme = dark

# reflog - history of checkouts/commits, actions in repo
# git reflog --date=iso
# git reflog --date=iso --pretty

# recover un-commited changes, as long as they have been staged and before git garbage collect them
# git recover 

